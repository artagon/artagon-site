---
import { getEntry } from 'astro:content';
import Base from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const entry = await getEntry('pages', 'vision');
if (!entry) {
  throw new Error('Vision page content not found');
}

const { Content } = await entry.render();
const { title, description } = entry.data;
---

<Base title={title} description={description}>
  <Fragment slot="header"><Header /></Fragment>

  <article class="vision-doc">
    <Content />
  </article>

  <Fragment slot="footer"><Footer /></Fragment>
</Base>

<style>
  /* ==== GLOBAL VISION DOC STYLES ==== */
  .vision-doc {
    line-height: 1.7;
    color: var(--text);
  }

  /* ==== HERO SECTION ==== */
  .hero-section {
    background: linear-gradient(135deg,
      color-mix(in srgb, var(--brand-teal) 20%, var(--bg)) 0%,
      var(--bg) 100%
    );
    border-bottom: 2px solid var(--brand-teal);
    padding: 80px 20px 60px;
    text-align: center;
    margin-bottom: 60px;
  }

  .hero-section h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    color: var(--brand-teal);
    margin: 0 0 0.5rem;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    color: var(--muted);
    margin: 0 0 2rem;
    font-weight: 300;
  }

  .mission-statement {
    max-width: 900px;
    margin: 2rem auto 0;
    padding: 2rem;
    background: var(--surface);
    border-radius: 12px;
    border: 2px solid var(--brand-teal);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .mission-text {
    font-size: clamp(1.3rem, 2.5vw, 1.8rem);
    font-weight: 600;
    color: var(--brand-teal);
    margin: 0;
    line-height: 1.4;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  /* ==== SECTION STRUCTURE ==== */
  .section-spacing {
    margin: 5rem 0;
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2.5rem;
    gap: 2rem;
  }

  .section-header h2 {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    color: var(--brand-teal);
    margin: 0;
    font-weight: 700;
    flex: 1;
  }

  .section-number {
    font-size: 4rem;
    font-weight: 900;
    color: color-mix(in srgb, var(--brand-teal) 20%, transparent);
    line-height: 1;
    flex-shrink: 0;
  }

  .section-intro {
    font-size: 1.15rem;
    color: var(--muted);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  /* ==== CONTENT BLOCKS ==== */
  .content-block {
    margin: 2rem 0;
  }

  .lead-text {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--text);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .highlight-box {
    background: linear-gradient(135deg,
      color-mix(in srgb, var(--brand-teal) 10%, var(--surface)) 0%,
      var(--surface) 100%
    );
    border-left: 4px solid var(--brand-teal);
    padding: 1.5rem 2rem;
    border-radius: 8px;
    margin: 2rem 0;
  }

  .highlight-box.competitive {
    background: linear-gradient(135deg,
      color-mix(in srgb, var(--brand-teal) 10%, var(--surface)) 0%,
      var(--surface) 100%
    );
    border-left-color: var(--brand-teal);
  }

  /* ==== THREE DOMAINS CARDS ==== */
  .three-domains {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  .domain-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .domain-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    border-color: var(--brand-teal);
  }

  .domain-icon {
    font-size: 2.5rem;
    margin-bottom: 1rem;
  }

  .domain-card h3 {
    font-size: 1.3rem;
    color: var(--brand-teal);
    margin: 0 0 1rem;
    font-weight: 600;
  }

  .domain-card p {
    color: var(--text);
    margin: 0;
    line-height: 1.6;
  }

  /* ==== PILLARS SECTION ==== */
  .pillars-title {
    font-size: 1.6rem;
    color: var(--brand-teal);
    margin: 3rem 0 2rem;
    text-align: center;
    font-weight: 600;
  }

  .pillars-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .pillar-card {
    background: var(--surface);
    border: 2px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .pillar-card:hover {
    border-color: var(--brand-teal);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  .pillar-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .pillar-number {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--brand-teal);
    color: var(--bg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .pillar-card h4 {
    font-size: 1.3rem;
    color: var(--brand-teal);
    margin: 0;
    font-weight: 600;
  }

  .pillar-card p {
    margin: 0;
    line-height: 1.6;
    color: var(--text);
  }

  /* ==== VALUE PROPOSITION ==== */
  .value-prop {
    display: grid;
    gap: 1.5rem;
    margin: 3rem 0;
  }

  .value-item {
    background: var(--surface);
    padding: 1.5rem 2rem;
    border-left: 4px solid var(--brand-teal);
    border-radius: 8px;
    line-height: 1.6;
  }

  .value-item strong {
    color: var(--brand-teal);
    font-size: 1.1rem;
  }

  /* ==== MISSION BREAKDOWN ==== */
  .mission-breakdown {
    margin: 2rem 0;
  }

  .mission-breakdown h3 {
    font-size: 1.5rem;
    color: var(--brand-teal);
    margin: 0 0 1rem;
  }

  .mission-intro {
    font-size: 1.1rem;
    color: var(--muted);
    margin-bottom: 2rem;
  }

  .mission-parts {
    display: grid;
    gap: 2rem;
    margin: 2rem 0;
  }

  .mission-part {
    background: var(--surface);
    border-left: 4px solid var(--brand-teal);
    padding: 1.5rem 2rem;
    border-radius: 8px;
  }

  .mission-part h4 {
    font-size: 1.2rem;
    color: var(--brand-teal);
    margin: 0 0 0.8rem;
    font-weight: 600;
  }

  .mission-part p {
    margin: 0;
    line-height: 1.6;
  }

  /* ==== PRINCIPLES LIST ==== */
  .principles-list {
    display: grid;
    gap: 1.5rem;
  }

  .principle-item {
    display: flex;
    gap: 2rem;
    background: var(--surface);
    padding: 2rem;
    border-radius: 12px;
    border: 1px solid var(--border);
    transition: all 0.3s ease;
  }

  .principle-item:hover {
    border-color: var(--brand-teal);
    transform: translateX(4px);
  }

  .principle-number {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    background: linear-gradient(135deg, var(--brand-teal) 0%, var(--brand-teal) 100%);
    color: var(--bg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.5rem;
    flex-shrink: 0;
  }

  .principle-content h3 {
    font-size: 1.3rem;
    color: var(--brand-teal);
    margin: 0 0 0.8rem;
    font-weight: 600;
  }

  .principle-content p {
    margin: 0;
    line-height: 1.6;
    color: var(--text);
  }

  /* ==== COMPONENTS GRID ==== */
  .components-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .component-card {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
    position: relative;
  }

  .component-card:hover {
    border-color: var(--brand-teal);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
    transform: translateY(-2px);
  }

  .component-card.highlight {
    border: 2px solid var(--brand-teal);
    background: linear-gradient(135deg,
      color-mix(in srgb, var(--brand-teal) 8%, var(--surface)) 0%,
      var(--surface) 100%
    );
  }

  .component-badge {
    display: inline-block;
    background: var(--brand-teal);
    color: var(--bg);
    padding: 0.3rem 0.8rem;
    border-radius: 20px;
    font-size: 0.85rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .component-card h3 {
    font-size: 1.25rem;
    color: var(--brand-teal);
    margin: 0 0 1rem;
    font-weight: 600;
    line-height: 1.3;
  }

  .component-card p {
    margin: 0 0 1rem;
    line-height: 1.6;
    color: var(--text);
  }

  .feature-list {
    list-style: none;
    padding: 0;
    margin: 1rem 0 0;
  }

  .feature-list li {
    padding: 0.5rem 0 0.5rem 1.5rem;
    position: relative;
    line-height: 1.5;
    color: var(--text);
  }

  .feature-list li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--brand-teal);
    font-weight: 700;
  }

  /* ==== TECH GRID ==== */
  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .tech-item {
    background: var(--surface);
    padding: 1.5rem;
    border-radius: 8px;
    border-left: 3px solid var(--brand-teal);
    line-height: 1.5;
  }

  .tech-item strong {
    color: var(--brand-teal);
    display: block;
    margin-bottom: 0.3rem;
  }

  /* ==== TWO COLUMN ==== */
  .two-col {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2.5rem;
    margin: 2rem 0;
  }

  .two-col h3 {
    font-size: 1.3rem;
    color: var(--brand-teal);
    margin: 0 0 1rem;
    font-weight: 600;
  }

  .two-col p {
    margin: 0;
    line-height: 1.6;
  }

  /* ==== DX FEATURES ==== */
  .dx-features {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.5rem;
    margin: 2rem 0;
  }

  .dx-features div {
    background: var(--surface);
    padding: 1.5rem;
    border-radius: 8px;
    border: 1px solid var(--border);
    line-height: 1.5;
  }

  .dx-features strong {
    color: var(--brand-teal);
  }

  /* ==== USE CASES DETAILED ==== */
  .use-cases-detailed {
    display: grid;
    gap: 3rem;
    margin: 2rem 0;
  }

  .use-case-detailed {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .use-case-detailed:hover {
    border-color: var(--brand-teal);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
    transform: translateY(-2px);
  }

  .use-case-header {
    background: linear-gradient(135deg,
      color-mix(in srgb, var(--brand-teal) 15%, var(--surface)) 0%,
      var(--surface) 100%
    );
    padding: 2rem;
    border-bottom: 2px solid var(--brand-teal);
    display: flex;
    align-items: center;
    gap: 1.5rem;
  }

  .use-case-number {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: var(--brand-teal);
    color: var(--bg);
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.3rem;
    flex-shrink: 0;
  }

  .use-case-header h3 {
    color: var(--brand-teal);
    margin: 0;
    font-size: 1.4rem;
    font-weight: 600;
  }

  .use-case-content {
    padding: 2rem;
  }

  .use-case-scenario {
    font-size: 1.05rem;
    color: var(--text);
    margin: 0 0 1.5rem;
    line-height: 1.6;
  }

  .use-case-flow {
    background: color-mix(in srgb, var(--bg) 50%, var(--surface));
    padding: 1.5rem;
    border-radius: 8px;
    border-left: 3px solid var(--brand-teal);
    margin: 1.5rem 0;
  }

  .use-case-flow h4 {
    color: var(--brand-teal);
    margin: 0 0 1rem;
    font-size: 1.1rem;
    font-weight: 600;
  }

  .use-case-flow ol {
    margin: 0;
    padding-left: 1.5rem;
  }

  .use-case-flow li {
    margin: 0.75rem 0;
    line-height: 1.6;
    color: var(--text);
  }

  .use-case-value {
    font-size: 1.05rem;
    color: var(--text);
    margin: 1.5rem 0 0;
    padding: 1rem 1.5rem;
    background: linear-gradient(135deg,
      color-mix(in srgb, var(--brand-teal) 8%, transparent) 0%,
      transparent 100%
    );
    border-left: 3px solid var(--brand-teal);
    border-radius: 6px;
    line-height: 1.6;
  }

  .use-case-value strong {
    color: var(--brand-teal);
  }

  /* ==== COMPETITIVE ANALYSIS ==== */
  .competitive-table {
    margin: 2rem 0;
  }

  .competitive-table h3 {
    font-size: 1.5rem;
    color: var(--brand-teal);
    margin: 2rem 0 1.5rem;
    text-align: center;
  }

  .comparison-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin: 2rem 0;
  }

  .comparison-category {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 12px;
    padding: 2rem;
    transition: all 0.3s ease;
  }

  .comparison-category:hover {
    border-color: var(--brand-teal);
    transform: translateY(-2px);
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
  }

  .comparison-category h4 {
    color: var(--brand-teal);
    margin: 0 0 1.5rem;
    font-size: 1.2rem;
    font-weight: 600;
    padding-bottom: 0.75rem;
    border-bottom: 2px solid color-mix(in srgb, var(--brand-teal) 30%, transparent);
  }

  .comparison-category ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .comparison-category li {
    padding: 0.6rem 0 0.6rem 2rem;
    position: relative;
    line-height: 1.6;
    color: var(--text);
  }

  .comparison-category li::before {
    content: "+";
    position: absolute;
    left: 0;
    color: var(--brand-teal);
    font-weight: 700;
    font-size: 1.3rem;
  }

  .comparison-category li strong {
    color: var(--brand-teal);
  }

  /* ==== ROADMAP PHASES DETAILED ==== */
  .roadmap-phases {
    display: grid;
    gap: 2.5rem;
    margin: 2rem 0;
  }

  .phase-detailed {
    background: var(--surface);
    border: 1px solid var(--border);
    border-radius: 12px;
    overflow: hidden;
    transition: all 0.3s ease;
  }

  .phase-detailed:hover {
    border-color: var(--brand-teal);
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.12);
  }

  .phase-header {
    background: linear-gradient(135deg,
      color-mix(in srgb, var(--brand-teal) 15%, var(--surface)) 0%,
      color-mix(in srgb, var(--brand-teal) 5%, var(--surface)) 100%
    );
    padding: 1.5rem 2rem;
    border-bottom: 2px solid var(--brand-teal);
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
  }

  .phase-header h3 {
    color: var(--brand-teal);
    margin: 0;
    font-size: 1.4rem;
    font-weight: 600;
  }

  .phase-timeline {
    display: inline-block;
    background: var(--brand-teal);
    color: var(--bg);
    padding: 0.4rem 1rem;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
    letter-spacing: 0.02em;
  }

  .phase-body {
    padding: 2rem;
  }

  .phase-description {
    font-size: 1.05rem;
    color: var(--muted);
    margin: 0 0 1.5rem;
    line-height: 1.6;
  }

  .phase-deliverables {
    list-style: none;
    padding: 0;
    margin: 1rem 0 1.5rem;
  }

  .phase-deliverables li {
    padding: 0.6rem 0 0.6rem 2rem;
    position: relative;
    line-height: 1.6;
    color: var(--text);
  }

  .phase-deliverables li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--brand-teal);
    font-weight: 700;
  }

  .phase-kpi {
    font-size: 0.95rem;
    color: var(--text);
    margin: 1.5rem 0 0;
    padding: 1rem 1.5rem;
    background: color-mix(in srgb, var(--brand-teal) 5%, transparent);
    border-left: 3px solid var(--brand-teal);
    border-radius: 6px;
    line-height: 1.6;
  }

  .phase-kpi strong {
    color: var(--brand-teal);
  }

  /* ==== VISION 2030 ==== */
  .vision-2030 {
    background: linear-gradient(135deg,
      color-mix(in srgb, var(--brand-teal) 5%, var(--bg)) 0%,
      var(--bg) 100%
    );
    padding: 4rem 2rem;
    border-radius: 16px;
    margin-top: 5rem;
  }

  .vision-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin: 2rem 0 3rem;
  }

  .vision-card {
    background: var(--surface);
    border: 2px solid var(--brand-teal);
    border-radius: 12px;
    padding: 2rem;
  }

  .vision-card h3 {
    font-size: 1.3rem;
    color: var(--brand-teal);
    margin: 0 0 1rem;
    font-weight: 600;
  }

  .vision-card p {
    margin: 0;
    line-height: 1.6;
  }

  .closing-statement {
    text-align: center;
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    background: var(--surface);
    border-radius: 12px;
    border: 2px solid var(--brand-teal);
  }

  .closing-statement p {
    font-size: 1.1rem;
    line-height: 1.7;
    margin: 1rem 0;
  }

  .closing-statement p:first-child {
    font-size: 1.3rem;
    color: var(--brand-teal);
  }

  /* ==== GENERAL TYPOGRAPHY ==== */
  .vision-doc h2, .vision-doc h3, .vision-doc h4 {
    line-height: 1.3;
  }

  .vision-doc p {
    margin: 1rem 0;
  }

  .vision-doc strong {
    color: var(--brand-teal);
    font-weight: 600;
  }

  /* ==== RESPONSIVE ==== */
  @media (max-width: 768px) {
    .hero-section {
      padding: 60px 20px 40px;
    }

    .section-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .section-number {
      font-size: 3rem;
    }

    .principle-item {
      flex-direction: column;
      gap: 1rem;
    }

    .two-col, .vision-grid, .pillars-grid, .three-domains {
      grid-template-columns: 1fr;
    }
  }
</style>
