---
import { getEntry } from 'astro:content';
import Base from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';

const entry = await getEntry('pages', 'vision');
if (!entry) {
  throw new Error('Vision page content not found');
}

const { Content } = await entry.render();
const { title, description } = entry.data;
---

<Base title={title} description={description}>
  <Fragment slot="header"><Header /></Fragment>

  <article class="vision-doc">
    <Content />
  </article>

  <Fragment slot="footer"><Footer /></Fragment>
</Base>

<style>
  /* ==== GLOBAL VISION DOC STYLES ==== */
  .vision-doc {
    line-height: 1.7;
    color: var(--text);
  }

  /* ==== HERO SECTION ==== */
  .hero-section {
    background: linear-gradient(135deg,
      rgba(34, 227, 197, 0.2) 0%,
      var(--bg) 100%
    );
    background: linear-gradient(135deg,
      color-mix(in srgb, var(--brand-teal) 20%, var(--bg)) 0%,
      var(--bg) 100%
    );
    border-bottom: 2px solid var(--brand-teal);
    padding: 80px 20px 60px;
    text-align: center;
    margin-bottom: 60px;
  }

  .hero-section h1 {
    font-size: clamp(2.5rem, 5vw, 3.5rem);
    font-weight: 700;
    color: var(--brand-teal);
    margin: 0 0 0.5rem;
    letter-spacing: -0.02em;
  }

  .hero-subtitle {
    font-size: clamp(1.2rem, 3vw, 1.5rem);
    color: var(--muted);
    margin: 0 0 2rem;
    font-weight: 300;
  }

  .mission-statement {
    max-width: 900px;
    margin: 2rem auto 0;
    padding: 2rem;
    background: var(--surface);
    border-radius: 12px;
    border: 2px solid var(--brand-teal);
    box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
  }

  .mission-text {
    font-size: clamp(1.3rem, 2.5vw, 1.8rem);
    font-weight: 600;
    color: var(--brand-teal);
    margin: 0;
    line-height: 1.4;
    text-transform: uppercase;
    letter-spacing: 0.02em;
  }

  /* ==== SECTION STRUCTURE ==== */
  .section-spacing {
    margin: 5rem 0;
  }

  .section-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: 2.5rem;
    gap: 2rem;
  }

  .section-header h2 {
    font-size: clamp(1.8rem, 4vw, 2.5rem);
    color: var(--brand-teal);
    margin: 0;
    font-weight: 700;
    flex: 1;
  }

  .section-number {
    font-size: 4rem;
    font-weight: 900;
    color: color-mix(in srgb, var(--brand-teal) 20%, transparent);
    line-height: 1;
    flex-shrink: 0;
  }

  .section-intro {
    font-size: 1.15rem;
    color: var(--muted);
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  /* ==== CONTENT BLOCKS ==== */
  .content-block {
    margin: 2rem 0;
  }

  .lead-text {
    font-size: 1.25rem;
    font-weight: 500;
    color: var(--text);
    line-height: 1.6;
    margin-bottom: 1rem;
  }

  .highlight-box {
    background: linear-gradient(135deg,
      color-mix(in srgb, var(--brand-teal) 10%, var(--surface)),
      var(--surface)
    );
    border-left: 4px solid var(--brand-teal);
    padding: 1.5rem 2rem;
    margin: 2rem 0;
    border-radius: 8px;
  }

  .highlight-box p {
    margin: 0;
    font-size: 1.1rem;
    line-height: 1.6;
  }

  .info-box {
    background: var(--surface);
    border: 2px solid color-mix(in srgb, var(--brand-teal) 30%, transparent);
    padding: 1.5rem 2rem;
    margin: 2rem 0;
    border-radius: 8px;
  }

  .info-box p {
    margin: 0.5rem 0;
    line-height: 1.6;
  }

  .info-box p:first-child {
    margin-top: 0;
  }

  .info-box p:last-child {
    margin-bottom: 0;
  }

  /* ==== CARDS & GRIDS ==== */
  .three-domains {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  .domain-card {
    background: var(--surface);
    border: 2px solid color-mix(in srgb, var(--brand-teal) 20%, transparent);
    padding: 2rem;
    border-radius: 12px;
    text-align: center;
    transition: all 0.3s ease;
  }

  .domain-card:hover {
    border-color: var(--brand-teal);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
    transform: translateY(-4px);
  }

  .domain-icon {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .domain-card h3 {
    color: var(--brand-teal);
    font-size: 1.3rem;
    margin: 1rem 0 0.75rem;
    font-weight: 600;
  }

  .domain-card p {
    color: var(--muted);
    line-height: 1.6;
    margin: 0;
  }

  .pillars-title {
    font-size: 1.8rem;
    color: var(--brand-teal);
    margin: 4rem 0 2rem;
    text-align: center;
    font-weight: 700;
  }

  .pillars-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin: 2rem 0 3rem;
  }

  .pillar-card {
    background: var(--surface);
    border: 2px solid color-mix(in srgb, var(--brand-teal) 20%, transparent);
    padding: 2rem;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .pillar-card:hover {
    border-color: var(--brand-teal);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .pillar-header {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 1rem;
  }

  .pillar-number {
    background: var(--brand-teal);
    color: white;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1.2rem;
    flex-shrink: 0;
  }

  .pillar-card h4 {
    color: var(--brand-teal);
    font-size: 1.3rem;
    margin: 0;
    font-weight: 600;
  }

  .pillar-card p {
    color: var(--text);
    line-height: 1.6;
    margin: 0;
  }

  .value-prop {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin: 3rem 0;
  }

  .value-item {
    background: linear-gradient(135deg,
      color-mix(in srgb, var(--brand-teal) 5%, var(--surface)),
      var(--surface)
    );
    border-left: 4px solid var(--brand-teal);
    padding: 1.5rem;
    border-radius: 8px;
    line-height: 1.6;
  }

  .value-item strong {
    color: var(--brand-teal);
    display: block;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  /* ==== PRODUCT GRID ==== */
  .product-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
    gap: 2rem;
    margin: 3rem 0;
  }

  .product-card {
    background: var(--surface);
    border: 2px solid color-mix(in srgb, var(--brand-teal) 20%, transparent);
    padding: 2rem;
    border-radius: 12px;
    transition: all 0.3s ease;
  }

  .product-card:hover {
    border-color: var(--brand-teal);
    box-shadow: 0 8px 30px rgba(0, 0, 0, 0.15);
  }

  .product-card h3 {
    color: var(--brand-teal);
    font-size: 1.5rem;
    margin: 0 0 1rem;
    font-weight: 600;
  }

  .product-card p {
    color: var(--text);
    line-height: 1.6;
    margin-bottom: 1.5rem;
  }

  .product-card ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .product-card li {
    padding: 0.5rem 0;
    padding-left: 1.5rem;
    position: relative;
    line-height: 1.5;
  }

  .product-card li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--brand-teal);
    font-weight: 700;
  }

  /* ==== TABLES ==== */
  .comparison-table {
    width: 100%;
    border-collapse: collapse;
    margin: 2rem 0;
    background: var(--surface);
    border-radius: 8px;
    overflow: hidden;
  }

  .comparison-table th,
  .comparison-table td {
    padding: 1rem;
    text-align: left;
    border-bottom: 1px solid color-mix(in srgb, var(--brand-teal) 15%, transparent);
  }

  .comparison-table th {
    background: color-mix(in srgb, var(--brand-teal) 15%, var(--surface));
    color: var(--brand-teal);
    font-weight: 600;
    text-align: center;
  }

  .comparison-table tr:last-child td {
    border-bottom: none;
  }

  .comparison-table td:first-child {
    font-weight: 600;
    color: var(--text);
  }

  .comparison-table td {
    text-align: center;
    color: var(--text);
  }

  /* ==== LISTS ==== */
  .feature-list {
    list-style: none;
    padding: 0;
    margin: 2rem 0;
  }

  .feature-list li {
    padding: 1rem 0;
    padding-left: 2rem;
    position: relative;
    line-height: 1.6;
    border-bottom: 1px solid color-mix(in srgb, var(--brand-teal) 10%, transparent);
  }

  .feature-list li:last-child {
    border-bottom: none;
  }

  .feature-list li::before {
    content: "→";
    position: absolute;
    left: 0;
    color: var(--brand-teal);
    font-weight: 700;
    font-size: 1.2rem;
  }

  .feature-list strong {
    color: var(--brand-teal);
  }

  .numbered-list {
    counter-reset: item;
    list-style: none;
    padding: 0;
    margin: 2rem 0;
  }

  .numbered-list li {
    counter-increment: item;
    padding: 1.5rem 0;
    padding-left: 3rem;
    position: relative;
    line-height: 1.6;
    border-bottom: 1px solid color-mix(in srgb, var(--brand-teal) 10%, transparent);
  }

  .numbered-list li:last-child {
    border-bottom: none;
  }

  .numbered-list li::before {
    content: counter(item);
    position: absolute;
    left: 0;
    top: 1.5rem;
    background: var(--brand-teal);
    color: white;
    width: 32px;
    height: 32px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 700;
    font-size: 1rem;
  }

  .numbered-list strong {
    color: var(--brand-teal);
    display: block;
    margin-bottom: 0.5rem;
    font-size: 1.1rem;
  }

  .bulleted-list {
    list-style: none;
    padding: 0;
    margin: 1.5rem 0;
  }

  .bulleted-list li {
    padding: 0.75rem 0;
    padding-left: 2rem;
    position: relative;
    line-height: 1.6;
  }

  .bulleted-list li::before {
    content: "•";
    position: absolute;
    left: 0.5rem;
    color: var(--brand-teal);
    font-weight: 700;
    font-size: 1.5rem;
  }

  .bulleted-list strong {
    color: var(--brand-teal);
  }

  /* ==== TIMELINE ==== */
  .timeline {
    position: relative;
    padding: 2rem 0;
    margin: 3rem 0;
  }

  .timeline::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0;
    bottom: 0;
    width: 4px;
    background: linear-gradient(to bottom,
      var(--brand-teal),
      color-mix(in srgb, var(--brand-teal) 30%, transparent)
    );
    border-radius: 2px;
  }

  .timeline-item {
    position: relative;
    padding-left: 3rem;
    margin-bottom: 3rem;
  }

  .timeline-item:last-child {
    margin-bottom: 0;
  }

  .timeline-marker {
    position: absolute;
    left: -8px;
    top: 0;
    width: 20px;
    height: 20px;
    background: var(--brand-teal);
    border: 4px solid var(--bg);
    border-radius: 50%;
  }

  .timeline-item h4 {
    color: var(--brand-teal);
    font-size: 1.3rem;
    margin: 0 0 0.5rem;
    font-weight: 600;
  }

  .timeline-item p {
    color: var(--text);
    line-height: 1.6;
    margin: 0.5rem 0;
  }

  .timeline-item ul {
    margin: 1rem 0;
  }

  /* ==== CODE BLOCKS ==== */
  .code-block {
    background: var(--surface);
    border: 1px solid color-mix(in srgb, var(--brand-teal) 20%, transparent);
    border-radius: 8px;
    padding: 1.5rem;
    margin: 2rem 0;
    font-family: 'Monaco', 'Menlo', monospace;
    font-size: 0.9rem;
    line-height: 1.6;
    overflow-x: auto;
  }

  .code-block code {
    color: var(--text);
  }

  /* ==== RESPONSIVE ==== */
  @media (max-width: 768px) {
    .section-header {
      flex-direction: column;
      align-items: flex-start;
    }

    .section-number {
      font-size: 3rem;
    }

    .pillars-grid,
    .product-grid,
    .value-prop {
      grid-template-columns: 1fr;
    }

    .comparison-table {
      font-size: 0.9rem;
    }

    .comparison-table th,
    .comparison-table td {
      padding: 0.75rem 0.5rem;
    }

    .timeline::before {
      left: 8px;
    }

    .timeline-item {
      padding-left: 3rem;
    }

    .timeline-marker {
      left: 0;
    }
  }

  /* ==== UTILITY CLASSES ==== */
  .text-center {
    text-align: center;
  }

  .mt-4 {
    margin-top: 4rem;
  }

  .mb-4 {
    margin-bottom: 4rem;
  }

  .emphasis {
    color: var(--brand-teal);
    font-weight: 600;
  }

  .quote {
    font-style: italic;
    color: var(--muted);
    border-left: 4px solid var(--brand-teal);
    padding-left: 1.5rem;
    margin: 2rem 0;
  }
</style>
