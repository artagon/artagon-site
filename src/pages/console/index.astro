---
import Base from '../../layouts/BaseLayout.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import Tagline from '../../components/Tagline.astro';
---
<Base title="Artagon Console" description="Manage tenants, clients, credentials, and policy — Verified. Private. Attested.">
  <Fragment slot="header"><Header /></Fragment>
  <section class="container card" style="margin-top:40px">
    <h1>Welcome</h1>
    <div class="discrete"><Tagline variant="sentence" /></div>
    <p>Create a sandbox tenant, register a client, and issue your first DPoP‑bound token.</p>
    <div class="actions" style="margin-bottom:12px">
      <a class="btn" href="#">Create tenant</a>
      <a class="btn" href="#">Register client</a>
      <a class="btn" href="#">Open policy editor</a>
    </div>
  </section>
  <Fragment slot="footer"><Footer /></Fragment>
</Base>
