---
const { showWordmark = false } = Astro.props;
---
<span style="display:inline-flex; align-items:center; gap:.55rem">
  <img src="/assets/logo-mark.svg" alt="Artagon" width="28" height="28" />
  {showWordmark && (
    <picture class="hide-sm" aria-hidden="true">
      <source srcset="/assets/logo-wordmark.svg" type="image/svg+xml" />
      <img src="/assets/logo-wordmark.svg" alt="" style="height:18px" />
    </picture>
  )}
</span>
