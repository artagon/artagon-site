---
import Logo from './Logo.astro';
import Tagline from './Tagline.astro';
import ThemeToggle from './ThemeToggle.astro';
const path = Astro.url.pathname;
const active = (href: string) => path === href || path.startsWith(href + '/');
---
<header>
  <div class="container nav" role="navigation" aria-label="Primary">
    <a class="brand" href="/" aria-label="Artagon Home">
      <Logo showWordmark={true} />
    </a>
    <nav aria-label="Main">
      <ul class="links">
        <li><a href="/platform" class={active('/platform') ? 'active' : ''}>Platform</a></li>
        <li><a href="/how" class={active('/how') ? 'active' : ''}>How it works</a></li>
        <li><a href="/developers" class={active('/developers') ? 'active' : ''}>Developers</a></li>
        <li><a href="/search" class={active('/search') ? 'active' : ''}>Search</a></li>
        <li><a href="/docs" class={active('/docs') ? 'active' : ''}>Docs</a></li>
        <li><a href="https://github.com/artagon" rel="noopener">GitHub</a></li>
      </ul>
    </nav>
    <div class="right">
      <Tagline class="hide-sm" />
      <ThemeToggle />
      <a class="cta" href="/get-started">Get Started</a>
    </div>
  </div>
</header>
