---
const { variant = 'inline', class: cls = '' } = Astro.props;
const text = variant === 'full' ? 'Trusted Identity for Machines and Humans - Verified, Private, Attested' : (variant === 'sentence' ? 'Verified, Private, Attested.' : (variant === 'abbr' ? 'V • P • A' : 'Verified • Private • Attested'));
---
<span class={`pill ${cls}`} aria-label="Company motto">{text}</span>
