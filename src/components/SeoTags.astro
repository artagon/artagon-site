---
export interface Props { title?: string; description?: string; path?: string; image?: string; robots?: string }
const {
  title = 'Artagon — Trusted Identity for Machines and Humans',
  description = 'Passkeys, verifiable credentials, attested clients, and graph-native policy — Trusted Identity for Machines and Humans - Verified, Private, Attested',
  path = '/',
  // Use generated OG image from logos package (1200x630)
  image = '/assets/logos/og-image.png',
  robots
} = Astro.props;
const url = new URL(path, Astro.site ?? 'https://artagon.com').toString();
const motto = 'Trusted Identity for Machines and Humans - Verified, Private, Attested';
const metaDescription = /Verified\W+Private\W+Attested/i.test(description) ? description : `${description.trim()} — ${motto}`;
---
<title>{title}</title>
<meta name="description" content={metaDescription} />
<link rel="canonical" href={url} />
{robots && <meta name="robots" content={robots} />}
<meta property="og:title" content={title} />
<meta property="og:description" content={metaDescription} />
<meta property="og:site_name" content="Artagon" />
<meta property="og:url" content={url} />
<meta property="og:type" content="website" />
<meta property="og:locale" content="en_US" />
<meta property="og:image" content={image} />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={metaDescription} />
<meta name="twitter:image" content={image} />
<script type="application/ld+json">
{JSON.stringify({
  "@context":"https://schema.org","@type":"Organization","name":"Artagon",
  "url":"https://artagon.com/",
  "logo":"https://artagon.com/assets/logos/logo-square-512.png",
  "slogan":"Trusted Identity for Machines and Humans - Verified, Private, Attested",
  "sameAs":["https://github.com/artagon"]
}, null, 2)}
</script>
<script type="application/ld+json">
{JSON.stringify({
  "@context":"https://schema.org","@type":"Service","name":"Artagon Identity Platform",
  "serviceType":"Identity and Access Management (IAM)","provider":{"@type":"Organization","name":"Artagon","url":"https://artagon.com/"},
  "areaServed":"Worldwide","url":"https://artagon.com/",
  "description":"The Unified Identity Platform for Machines and Humans. OIDC 2.1 OpenID Provider with PAR, JAR, JARM, DPoP, mTLS. GNAP Authorization Server with proof-of-possession. Verifiable Credentials using SD-JWT and BBS+ via OID4VCI/VP. Passkey-first authentication (WebAuthn/FIDO2). Device and app attestation (Android Play Integrity, Apple App Attest). Zanzibar-style relationship graph with PDP policy engine (XACML, Cedar, OPA). Zero-knowledge selective disclosure. Privacy-by-design identity infrastructure. Verified, Private, Attested."
}, null, 2)}
</script>
