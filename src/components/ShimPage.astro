---
export interface Props {
  title: string;
  description?: string;
  ctaHref?: string;
  ctaLabel?: string;
  altLinks?: {href:string;label:string}[]
}
const {
  title,
  description = 'This page is a placeholder (shim) so navigation never breaks. The full content is coming soon.',
  ctaHref='/',
  ctaLabel='Back to home',
  altLinks=[]
} = Astro.props;
---
<section class="container" style="padding:40px 0">
  <div class="card">
    <div class="eyebrow">Shim page</div>
    <h1 style="margin:.2rem 0">{title}</h1>
    <p class="discrete">{description}</p>
    <div class="actions" style="margin-top:12px">
      <a class="btn" href={ctaHref}>{ctaLabel}</a>
      {altLinks.map(l => <a class="btn" href={l.href}>{l.label}</a>)}
    </div>
  </div>
</section>
