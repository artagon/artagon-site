  {
    title: "Verifiable Everything",
    bullets: [
      "Move from asserted → proven identity.",
      "Cryptographic proof for users, devices, and clients (DIDs, SD‑JWT/BBS+).",
    ],
  },
  {
    title: "Zero‑Friction Security",
    bullets: [
      "Passkey‑primary login (phishing‑resistant).",
      "Hardened profiles: PAR · JAR/JARM · DPoP · RAR · mTLS.",
      "Invisible device & app attestation.",
    ],
  },
